{
  "name": "pouchy",
  "version": "12.2.0",
  "description": "A simple, opinionated interface for the amazing PouchDB",
  "main": "src/index.js",
  "scripts": {
    "test": "npm-run-all -p test:*",
    "test:node": "BLUEBIRD_WARNINGS=0 nyc --reporter=lcov --check-coverage --functions=90 --branches=80 node test/node",
    "test:browser": "testem ci -P 10",
    "lint": "standard \"src/**/*.js\" \"test/**/*.js\"",
    "preversion": "git checkout master && git pull",
    "postpublish": "run-s docs:build docs:publish docs:clean",
    "publish-patch": "npm run preversion && npm version patch && git push origin master --tags && npm publish",
    "publish-minor": "npm run preversion && npm version minor && git push origin master --tags && npm publish",
    "publish-major": "npm run preversion && npm version major && git push origin master --tags && npm publish",
    "docs:build": "jsdock build",
    "docs:clean": "jsdock clean",
    "docs:deploy": "jsdock publish",
    "precommit": "run-s lint",
    "snyk-protect": "snyk protect",
    "prepublish": "npm run snyk-protect"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cdaringe/pouchy.git"
  },
  "keywords": [
    "pouchdb",
    "pouch",
    "wrapper",
    "api"
  ],
  "author": "cdaringe",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cdaringe/pouchy/issues"
  },
  "homepage": "https://github.com/cdaringe/pouchy#readme",
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.3.0",
    "coveralls": "2.13.1",
    "fs-extra": "^4.0.2",
    "husky": "0.14.3",
    "jsdock": "^1.0.3",
    "npm-run-all": "^4.0.2",
    "nyc": "^11.0.2",
    "perish": "1.0.1",
    "pouchdb-adapter-leveldb": "^6.3.4",
    "pouchdb-adapter-memory": "^6.3.4",
    "pouchdb-adapter-websql": "^6.3.4",
    "snyk": "^1.30.1",
    "spawn-pouchdb-server": "^3.3.1",
    "standard": "^10.0.2",
    "tape": "4.8.0",
    "testem": "^1.18.4"
  },
  "dependencies": {
    "bluebird": "3.5.0",
    "lodash": "^4.17.4",
    "path": "0.12.7",
    "pouchdb-adapter-http": "^6.0.5",
    "pouchdb-core": "^6.0.6",
    "pouchdb-find": "^6.2.0",
    "pouchdb-replication": "^6.0.5",
    "url": "0.11.0"
  },
  "browser": {
    "perish": "./src/browser/perish.js",
    "path": "./src/browser/path.js"
  },
  "snyk": true
}
