{
  "name": "pouchy",
  "version": "11.0.4",
  "description": "A simple, opinionated interface for the amazing PouchDB",
  "main": "src/index.js",
  "scripts": {
    "test": "yarn run test-node && yarn run test-browser",
    "test-node": "nyc --reporter=lcov --check-coverage --functions=90 --branches=80 node test/node",
    "test-browser": "browserify test/browser/index.js | tape-run",
    "lint": "standard \"src/**/*.js\" \"test/**/*.js\"",
    "preversion": "git checkout master && git pull",
    "docs": "mkdir -p docs && jsdoc -c .jsdoc.json src/",
    "deploy-docs": "gh-pages -d docs && rm -rf docs",
    "postpublish": "yarn run docs && yarn run deploy-docs",
    "publish-patch": "npm run preversion && npm version patch && git push origin master --tags && npm publish",
    "publish-minor": "npm run preversion && npm version minor && git push origin master --tags && npm publish",
    "publish-major": "npm run preversion && npm version major && git push origin master --tags && npm publish",
    "lintfix": "standard-format -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cdaringe/pouchy.git"
  },
  "keywords": [
    "pouchdb",
    "pouch",
    "wrapper",
    "api"
  ],
  "author": "cdaringe",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cdaringe/pouchy/issues"
  },
  "homepage": "https://github.com/cdaringe/pouchy#readme",
  "devDependencies": {
    "browserify": "^14.3.0",
    "coveralls": "2.13.1",
    "gh-pages": "0.12.0",
    "jsdoc": "3.4.3",
    "minami": "1.2.2",
    "nyc": "10.1.2",
    "perish": "1.0.1",
    "pouchdb-adapter-leveldb": "^6.0.5",
    "pouchdb-adapter-memory": "^6.0.5",
    "shizam": "0.0.5",
    "spawn-pouchdb-server": "^3.3.1",
    "standard": "9.0.0",
    "standard-format": "^2.2.4",
    "tape": "4.6.3",
    "tape-run": "^2.2.1"
  },
  "dependencies": {
    "bluebird": "3.5.0",
    "lodash": "^4.17.4",
    "path": "0.12.7",
    "pouchdb-adapter-http": "^6.0.5",
    "pouchdb-core": "^6.0.6",
    "pouchdb-find": "^0.10.0",
    "pouchdb-replication": "^6.0.5",
    "url": "0.11.0"
  },
  "pre-commit": [
    "lint"
  ]
}
